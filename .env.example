# AI Daily Digest Environment Variables
# Copy this file to .env and fill in your actual API keys

# Twitter/X API (required for Twitter content)
# Get your Bearer Token from: https://developer.twitter.com
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# YouTube Data API (required for YouTube content)
# Get your API Key from: https://console.cloud.google.com
YOUTUBE_API_KEY=your_youtube_api_key_here

# Content Sources (comma-separated list)
# Options: arxiv, blog, github, huggingface, twitter, youtube
CONTENT_SOURCES=arxiv,blog

# LLM Provider Settings
# LLM_PROVIDER=deepseek  # or openai
# DEEPSEEK_API_KEY=your_deepseek_api_key
# OPENAI_API_KEY=your_openai_api_key

# Optional: Twitter Settings
# TWITTER_MIN_LIKES=100
# TWITTER_MAX_TWEETS_PER_USER=5

# Optional: YouTube Settings
# YOUTUBE_MIN_VIEWS=10000
# YOUTUBE_MIN_DURATION_MINUTES=5
# YOUTUBE_MAX_VIDEOS_PER_CHANNEL=3

# Optional: Digest Settings
# WINDOW_START=168  # hours ago (1 week)
# MAX_NUM_PAPERS=7
# SCORE_THRESHOLD=1

# Notion Output (optional)
# Get your token from: https://www.notion.so/my-integrations
# NOTION_TOKEN=secret_xxx
# NOTION_DATABASE_ID=your_database_id_here
# OUTPUT_NOTION=true
